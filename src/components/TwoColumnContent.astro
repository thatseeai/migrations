---
// Custom TwoColumnContent component with TOC toggle support
// Overrides @astrojs/starlight default TwoColumnContent component

// Type assertion for Starlight locals
const { starlightRoute } = Astro.locals as any;
---

<div class="lg:sl-flex">
	{
		starlightRoute.toc && (
			<aside class="right-sidebar-container print:hidden">
				<div class="right-sidebar">
					<slot name="right-sidebar" />
				</div>
			</aside>
		)
	}
	<div class="main-pane"><slot /></div>
</div>

<style>
	@layer starlight.core {
		.main-pane {
			isolation: isolate;
		}

		@media (min-width: 72rem) {
			.right-sidebar-container {
				order: 2;
				position: relative;
				width: calc(
					var(--sl-sidebar-width) + (100% - var(--sl-content-width) - var(--sl-sidebar-width)) / 2
				);
				transition: width 0.3s ease, opacity 0.3s ease;
			}

			.right-sidebar {
				position: fixed;
				top: 0;
				border-inline-start: 1px solid var(--sl-color-hairline);
				padding-top: var(--sl-nav-height);
				width: 100%;
				height: 100vh;
				overflow-y: auto;
				scrollbar-width: none;
			}

			.main-pane {
				width: 100%;
				transition: width 0.3s ease;
			}

			:global([data-has-sidebar][data-has-toc]) .main-pane {
				--sl-content-margin-inline: auto 0;

				order: 1;
				width: calc(
					var(--sl-content-width) + (100% - var(--sl-content-width) - var(--sl-sidebar-width)) / 2
				);
			}

			/* TOC 토글 상태: TOC 숨김 */
			:global(body.toc-hidden) .right-sidebar-container {
				width: 0 !important;
				opacity: 0;
				pointer-events: none;
			}

			/* TOC 토글 상태: 메인 패널 확장 */
			:global(body.toc-hidden[data-has-sidebar][data-has-toc]) .main-pane {
				width: 100% !important;
				--sl-content-margin-inline: auto;
			}

			/* TOC 숨김 시 콘텐츠 최대 너비 확장 */
			:global(body.toc-hidden) main {
				max-width: none !important;
			}

			:global(body.toc-hidden) .content-panel {
				max-width: none !important;
			}
		}
	}
</style>
