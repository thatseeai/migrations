---
// SideBySide.astro - Before/After 코드 블록을 좌우 배치하는 컴포넌트
interface Props {
  leftTitle?: string;
  rightTitle?: string;
}

const { leftTitle = "Before (Angular)", rightTitle = "After (React 18+)" } = Astro.props;
---

<div class="side-by-side-wrapper">
  <div class="side-by-side-container">
    <div class="side-by-side-panel left-panel">
      <h3 class="panel-title">{leftTitle}</h3>
      <div class="panel-content">
        <slot name="left" />
      </div>
    </div>
    <div class="side-by-side-panel right-panel">
      <h3 class="panel-title">{rightTitle}</h3>
      <div class="panel-content">
        <slot name="right" />
      </div>
    </div>
  </div>
</div>

<style>
  .side-by-side-wrapper {
    margin: 2rem 0;
  }

  .side-by-side-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    align-items: start;
  }

  .side-by-side-panel {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .panel-title {
    margin: 0 0 0.75rem 0;
    padding: 0.5rem 0.75rem;
    background: var(--sl-color-accent-low);
    border-radius: 0.5rem 0.5rem 0 0;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--sl-color-white);
  }

  .panel-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  /* 코드 블록 스타일 조정 */
  .panel-content :global(pre) {
    margin: 0;
    border-radius: 0 0 0.5rem 0.5rem;
    height: 100%;
    overflow: auto;
  }

  .panel-content :global(> *:first-child) {
    margin-top: 0;
  }

  .panel-content :global(> *:last-child) {
    margin-bottom: 0;
  }

  /* 반응형: 좁은 화면에서는 세로 배치 */
  @media (max-width: 1200px) {
    .side-by-side-container {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }

  /* 매우 넓은 화면에서 TOC가 숨겨질 때 더 넓게 */
  @media (min-width: 1400px) {
    .side-by-side-wrapper.toc-hidden {
      max-width: none;
    }
  }
</style>
